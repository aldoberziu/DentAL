style.
    @import url('https://fonts.googleapis.com/css?family=Josefin+Sans');
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    outline: none;
    }
    .wrapper {
    max-width: 350px;
    width: 100%;
    background: #fff;
    padding: 25px;
    border-radius: 5px;
    font-family: 'Josefin Sans', sans-serif;
    }
    .wrapper h2 {
    text-align: center;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #332902;
    }
    .wrapper .input_field {
    margin-bottom: 10px;
    }
    .wrapper .input_field input[type='text'],
    .wrapper textarea {
    border: 1px solid #e0e0e0;
    width: 100%;
    padding: 10px;
    }
    .wrapper textarea {
    resize: none;
    height: 80px;
    }
    .wrapper .btn input[type='submit'] {
    border: 0px;
    margin-top: 15px;
    padding: 10px;
    text-align: center;
    width: 100%;
    background:rgba(240, 240, 240, 255);
    border: 2px solid rgba(60, 115, 123, 255);
    color: #332902;
    text-transform: uppercase;
    letter-spacing: 5px;
    font-weight: bold;
    border-radius: 25px;
    cursor: pointer;
    }
.wrapper
  h2.heading-secondary ACCOUNT SETTINGS
  form#myform
    .input_field
      p Name
      input#name(type='text' value=`${user.name}` required name='name')
    .input_field
      p Email Address
      input#email(type='text' value=`${user.email}` required name='email')
    .input_field 
      p Role
      p(style="text-transform: capitalize; font-size:12px;")= `${user.role}`
    .input_field
      p Choose New Photo
      input(type='file', accept='image/*', name='photo' id='photo')
    .updateBtn
      input.btn-save-data(type='submit' placeholder='Update Settings')