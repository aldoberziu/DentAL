extends base

block content
    style.
        .alert {
            position: fixed;
            top: 0;
            left: 50%;
            -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
            z-index: 9999;
            color: #fff;
            font-size: 1.8rem;
            font-weight: 400;
            text-align: center;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            padding: 1.6rem 15rem;
            -webkit-box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
            box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
        }
        .alert--success {
            background-color: #20bf6b;
        }
        .alert--error {
            background-color: #eb4d4b;
        }
    .loginForm 
        .form2
            form.review#loginForm
                .inputs
                    input.feedback-input.input#email(for="email" style="width: 100%;" name='email' type='text' placeholder='example@mail.com')
                    input.feedback-input.input#password(for="password" style="width: 100%;" name='password' type='text' placeholder='••••••••')
                .signup
                    button LOGIN
    .loginFormTexts
        p Don't have an account? 
        br
        a(href="/signup") Sign up now! 
        
    