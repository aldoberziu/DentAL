style.
    /* main nav */
  .navbar a {
    text-decoration: none;
    color: var(--primary-color);
  }
  .logo img {
    width: 230px;
    height: 54px;
  }
  .navbar {
    width: 100%;
    height: 80px;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: rgba(60, 115, 123, 255);
  }
  .navbar-scroll{
    width: 100%;
    height: 80px;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: rgba(60, 115, 123, 255);
    border-bottom: 1px solid var(--primary-color-light);
    box-shadow: 1px 1px 18px var(--primary-color-light);
  }
  .menu ul {
    display: flex;
    align-items: center;
    padding-top: 20px;
  }
  .menu ul li{
    margin-right: 10px;
  }
  .menu ul li a {
    text-decoration: none;
    color: rgba(60, 115, 123, 255);
    padding: 5px 22px;
    letter-spacing: 2px;
    font-size: 18px;
  }
  .menu ul li a:hover {
    border-bottom: 4px solid rgba(60, 115, 123, 255);
    transition: 0.4s;
  }

  /* join us button */
  .signup a,
  .signup button {
    text-decoration: none;
    color: var(--primary-color);
    font-size: 18px;
    font-weight: bold;
    border-radius: 12px;
    padding: 10px 25px;
    border: 2px solid var(--primary-color);
    transition: 0.3s;
  }
  .signup a:hover,
  .signup button:hover {
    background: rgba(60, 115, 123, 255);
    color: #fff;
    cursor: pointer;
  }
  /* second nav*/
  .container {
    margin: none;
  }
  .second-nav {
    background-color: rgba(245, 245, 245, 255);
    width: 100%;
    cursor: default;
    padding: 15px 0px;
  }
  .second-nav h5 {
    font-family: Helvetica, sans-serif;
    font-weight: bold;
    font-size: 16px;
    color: grey;
    text-align: center;
  }
  .second-nav h6 {
    font-family: Tahoma, sans-serif;
    font-size: 14px;
    font-weight: lighter;
    color: darkgray;
    text-align: center;
  }
  .nav {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  }
  .nav .nav__el img {
  width: 40px;
  height: 40px;
  }
  .nav--user {
  -webkit-box-flex: 0;
  -ms-flex: 0 1 40%;
  flex: 0 1 40%;
  -webkit-box-pack: end;
  -ms-flex-pack: end;
  justify-content: flex-end;
  }
  .nav__el,
  .nav__el:link,
  .nav__el:visited {
    color: #f7f7f7;
    text-transform: uppercase;
    font-size: 1.6rem;
    text-decoration: none;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: inline-flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-transition: all 0.2s;
    transition: all 0.2s;
    font-weight: 400;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
  }
  .nav__el:hover,
  .nav__el:active {
    -webkit-transform: translateY(-2px);
    transform: translateY(-2px);
  }
  .nav__el:not(:last-child) {
    margin-right: 3rem;
  }
  .nav__user-img {
  height: 3.5rem;
  width: 3.5rem;
  border-radius: 50%;
  margin-left: 0.5rem;
  }
  
  .alert {
    position: fixed;
    top: 0;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    z-index: 9999;
    color: #fff;
    font-size: 1.8rem;
    font-weight: 400;
    text-align: center;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    padding: 1.6rem 15rem;
    -webkit-box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
    box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
  }
  .alert--success {
    background-color: #20bf6b;
  }
  .alert--error {
    background-color: #eb4d4b;
  }

